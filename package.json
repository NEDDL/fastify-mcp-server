{
  "name": "fastify-mcp-server",
  "author": "Mustafa ONAL",
  "version": "0.1.0",
  "private": true,
  "description": "A minimal, functional-style MCP server built with Fastify - the fastest Node.js API framework",
  "type": "module",
  "engines": {
    "node": ">=20.10.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts | pino-pretty --colorize --translateTime 'HH:MM:ss Z' --ignore pid,hostname",
    "start": "node dist/index.js",
    "mcp": "node dist/mcp-stdio.js",
    "build": "tsc -p tsconfig.json",
    "check": "tsc --noEmit -p tsconfig.json",
    "clean": "rimraf dist",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.5.0",
    "fastify-plugin": "^5.1.0",
    "fastify-type-provider-zod": "^4.0.1",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^9.12.0",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}
